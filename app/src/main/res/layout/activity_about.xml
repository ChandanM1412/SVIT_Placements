<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87AAD6"
    tools:context=".About">

    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="#296A88"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/clogo0"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/graduateiconwhite" />

            <TextView
                android:id="@+id/cvrceName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/clogo0"
                android:layout_centerVertical="true"
                android:text="SVIT"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/placementsName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/cvrceName1"
                android:text=" Placements"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#ffffff"
                android:textSize="36sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/rl01"
        android:layout_marginTop="60sp"
        android:layout_height="350sp"
        android:background="@drawable/shape_login_panel"
        tools:ignore="MissingConstraints"
        android:paddingTop="70sp"
        android:paddingLeft="50sp"
        android:paddingRight="50sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adminlogin"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/myowngradient4"
            android:text=" About "
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="231dp" />

        <TextView
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40sp"
            android:background="@drawable/newedittext"
            android:text="@string/college"
            android:onClick="AboutClicked"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/ad"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="40sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="40sp"
            android:text="@string/developer"
            android:onClick="AboutClicked"
            android:textAlignment="center"
            android:textSize="30sp"
            android:background="@drawable/newedittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>